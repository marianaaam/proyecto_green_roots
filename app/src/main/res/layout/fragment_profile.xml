<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="@string/TittleFragmentProfile"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:fontFamily="serif"
                android:gravity="start"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                app:srcCompat="@drawable/logo"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_corners"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_gravity="end"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="26dp"
            />


        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/icon_user" />

        <TextView
            android:id="@+id/labelNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textNameRegister"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textNameRegister"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/labelLastNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textLastNameRegister"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tvLastNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textLastNameRegister"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/labelEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textEmailRegister"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tvEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textEmailRegister"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/labelPhoneProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textPhoneRegister"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tvPhoneProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="serif"
            android:text="@string/textPhoneRegister"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/buttonEditProfileAc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="30dp"
            android:backgroundTint="@color/green"
            android:fontFamily="serif"
            android:text="@string/textProfile"
            android:textSize="25sp"
            android:textColor="@color/white"
            app:strokeColor="@color/orange"
            app:strokeWidth="3dp"
            />

    </LinearLayout>

</ScrollView>